{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "command": "./gradlew",
            "windows": {
                "command": "gradew.bat"
            },
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "Show Tasks",
            "command": "./gradlew",
            "windows": {
                "command": "gradew.bat"
            },
            "args": [
                "tasks"
            ],
            "problemMatcher": []
        },
        {
            "label": "Assemble",
            "command": "./gradlew",
            "windows": {
                "command": "gradew.bat"
            },
            "args": [
                "assemble"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Verify",
            "command": "./gradlew",
            "windows": {
                "command": "gradew.bat"
            },
            "args": [
                "check"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run",
            "command": "./gradlew",
            "windows": {
                "command": "gradew.bat"
            },
            "args": [
                "bootRun"
            ],
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
